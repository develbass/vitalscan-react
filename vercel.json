{
  "version": 2,
  "buildCommand": "NODE_ENV=production NODE_OPTIONS='--max-old-space-size=4096' yarn build",
  "outputDirectory": "dist",
  "installCommand": "yarn install",
  "framework": null,
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  }
}
